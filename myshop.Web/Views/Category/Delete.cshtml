@model Category

<!-- method is post because the user put your information and click on one of two buttons -->
<!-- asp-for used for match the Name and Description in Category Model -->
<form method="post">
    <input hidden asp-for="Id" /> <!-- To Initialize Id -->
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" disabled class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" asp-action="DeleteCategory" class="btn btn-danger">Delete</button> <!--asp-action -> Because the name of action is Diffrent ->
        <a asp-action="Index" asp-controller="Category" class="btn btn-warning">Back To Index</a>
    </div>
</form>

<!--Client Side Validation-->
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
